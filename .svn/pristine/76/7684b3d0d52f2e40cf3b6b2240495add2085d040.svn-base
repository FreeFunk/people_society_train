<script src="/layuiadmin/layui/layui.js"></script>
<script>
        layui.config({
            base: '/layuiadmin/' //静态资源所在路径
        }).extend({
            index: 'lib/index' //主入口模块
        }).use(['index', 'form','laydate','upload'], function(){
            var $ = layui.$
                ,laydate = layui.laydate
                ,admin  = layui.admin
                ,upload = layui.upload
                ,form = layui.form;

            //上传学校背景图
            var uploadInst = upload.render({
                elem: '#schoolAppLoginImg' //绑定元素
                ,url: layui.setter.basePath +'/society/societySchool/uploadImg.jsn'
                ,accept: 'images'
                ,size:50000
                // ,bindAction:'#SocietySchool-form-submit'
                // ,auto:false
                ,before: function(obj){
                    obj.preview(function(index, file, result){
                        $('#uploadSchoolAppLoginImg').append('<div id="" class="file-iteme-appImg">' +
                            '<div style="display: none" class="handle"><i class="layui-icon layui-icon-delete">删除</i></div>' +
                            '<img src="'+ result +'" alt="'+ file.name +'" class="layui-upload-img" style="width: 90px;height: 90px">'+
                            '</div>');
                        $('#schoolAppLoginImg').attr('style','display:none');
                    });
                }
                ,done: function(res){
                    if(res.code > 0){//上传失败
                        return layer.msg('上传失败');
                    }
                    //赋值图片路劲到隐藏标签上，方便用户提交获取
                    $("#imgAppressName").attr("value",res.data.data.src);
                }
                ,error: function(){
                    //演示失败状态，并实现重传

                }
            });

            $(document).on("mouseenter mouseleave", ".file-iteme-appImg", function(event){
                if(event.type === "mouseenter"){
                    //鼠标悬浮
                    $(this).children(".info").fadeIn("fast");
                    $(this).children(".handle").fadeIn("fast");
                }else if(event.type === "mouseleave") {
                    //鼠标离开
                    $(this).children(".info").hide();
                    $(this).children(".handle").hide();
                }
            });
            //点击删除标识删除logo
            $(document).on("click", ".file-iteme-appImg .handle", function(event){
                //前端预览图片删除
                $(this).parent().remove();
                $('#schoolAppLoginImg').attr('style','display:');
                debugger
                var imgAppressName =  $("#imgAppressName").val();
                //后台删除文件
                admin.req({
                    url:layui.setter.basePath +'/society/societySchool/deleteImgByAddress.jsn',
                    method:"post",
                    data:{
                        'imgAddressName' : imgAppressName
                    },
                    success:function (data) {

                    },
                });
            });

            //上传学校logo
            var uploadInst = upload.render({
                elem: '#schoolLogoUrl' //绑定元素
                ,url: layui.setter.basePath +'/society/societySchool/uploadImg.jsn'
                ,accept: 'images'
                ,size:50000
                // ,bindAction:'#SocietySchool-form-submit'
                // ,auto:false
                ,before: function(obj){
                    obj.preview(function(index, file, result){
                        $('#uploadImg').append('<div id="" class="file-iteme">' +
                            '<div style="display: none" class="handle"><i class="layui-icon layui-icon-delete">删除</i></div>' +
                            '<img src="'+ result +'" alt="'+ file.name +'" class="layui-upload-img" style="width: 90px;height: 90px">'+
                            '</div>');
                        $('#schoolLogoUrl').attr('style','display:none');
                    });
                }
                ,done: function(res){
                    if(res.code > 0){//上传失败
                        return layer.msg('上传失败');
                    }
                    //赋值图片路劲到隐藏标签上，方便用户提交获取
                    $("#imgAddressName").attr("value",res.data.data.src);
                }
                ,error: function(){
                    //演示失败状态，并实现重传

                }
            });


            //图片上方浮动删除
            $(document).on("mouseenter mouseleave", ".file-iteme", function(event){
                if(event.type === "mouseenter"){
                    //鼠标悬浮
                    $(this).children(".info").fadeIn("fast");
                    $(this).children(".handle").fadeIn("fast");
                }else if(event.type === "mouseleave") {
                    //鼠标离开
                    $(this).children(".info").hide();
                    $(this).children(".handle").hide();
                }
            });
            //点击删除标识删除logo
            $(document).on("click", ".file-iteme .handle", function(event){
                //前端预览图片删除
                $(this).parent().remove();
                $('#schoolLogoUrl').attr('style','display:');
                debugger
                var imgAddressName =  $("#imgAddressName").val();
                //后台删除文件
                admin.req({
                    url:layui.setter.basePath +'/society/societySchool/deleteImgByAddress.jsn',
                    method:"post",
                    data:{
                      'imgAddressName' : imgAddressName
                    },
                    success:function (data) {

                    },
                });
            });


            form.on('submit(SocietySchool-form-submit)', function(data){
                var indexLoad = parent.layer.load(1, {shade: [0.1, '#393D49']});
                //获取图片地址
                var imgAddressName =  $("#imgAddressName").val();
                data.field['schoolLogoUrl'] = imgAddressName;
                var imgAppressName =  $("#imgAppressName").val();
                data.field['schoolAppLoginImg'] = imgAppressName;
                var field = data.field; //获取提交的字段
                var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                //提交 Ajax 成功后，关闭当前弹层并重载表格
                admin.req({
                    url:layui.setter.basePath +'/society/societySchool/addNewSchoolInfo.jsn',
                    data:field,
                    method:"post",
                    success:function (data) {
                        if(data.success){
                            parent.layui.table.reload('SocietySchool-list'); //重载表格
                            parent.layer.closeAll();
                            parent.layer.msg('添加成功', {
                                icon: 1
                            });
                        }else{
                            parent.layer.close(indexLoad);
                            parent.layer.msg(data.errMsg, {
                            });
                        }

                    },
                });

            });

            //查询所有地区
            function addressList() {
                admin.req({
                    url:layui.setter.basePath + '/society/societySchool/listAllXianQu.jsn',
                    method:"post",
                    success:function(data){
                        debugger
                        var xianQu = data.data;
                        //将查询到的角色列表展示到下拉框中去;
                        if(xianQu!="undefined"){
                            for(var i=0;i<xianQu.length;i++){
                                var xianQuInfo = xianQu[i].id+","+xianQu[i].name;//id拼接名字
                                $("#xianquName").append("<option value="+xianQuInfo+">"+xianQu[i].name+"</option>");
                                layui.form.render('select');//重新渲染表格
                            }
                        }
                    }
                });
            }
            addressList();

            laydate.render({
                elem: '#createTime', //指定元素
                type:'datetime'
            });
        })
</script>
