<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>编辑</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link rel="stylesheet" href="/layuiadmin/layui/css/layui.css" media="all">
    <link rel="stylesheet" href="/layuiadmin/style/app.css" media="all">
</head>
<body>

<div class="layui-form" lay-filter="SocietySchool-form" id="SocietySchool-form" style="padding: 20px 30px 0 0;">
    <div class="layui-row">
        <div class="layui-form-item layui-hide">
            <label class="layui-form-label">主键</label>
            <div class="layui-input-block">
                <input type="text" name="id" id="id" placeholder="请输入主键" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6 layui-hide">
            <div class="layui-form-item">
                <label class="layui-form-label">省ID</label>
                <div class="layui-input-block">
                    <input type="text" name="provinceId" placeholder="请输入省ID" autocomplete="off" class="layui-input">
                </div>
            </div>
        </div>

        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6 layui-hide">
            <div class="layui-form-item">
                <label class="layui-form-label">创建时间</label>
                <div class="layui-input-block">
                    <input type="text" name="createTime" class="layui-input">
                </div>
            </div>
        </div>

        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6 layui-hide">
            <div class="layui-form-item">
                <label class="layui-form-label">创建人id</label>
                <div class="layui-input-block">
                    <input type="text" name="createUserId"  class="layui-input">
                </div>
            </div>
        </div>

        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6 layui-hide">
            <div class="layui-form-item">
                <label class="layui-form-label">省ID</label>
                <div class="layui-input-block">
                    <input type="text" name="provinceId" placeholder="请输入省ID" autocomplete="off" class="layui-input">
                </div>
            </div>
        </div>

        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6 layui-hide">
            <div class="layui-form-item">
                <label class="layui-form-label">创建人名</label>
                <div class="layui-input-block">
                    <input type="text" name="createUserName" class="layui-input">
                </div>
            </div>
        </div>

        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6 layui-hide">
            <div class="layui-form-item">
                <label class="layui-form-label">城市ID</label>
                <div class="layui-input-block">
                    <input type="text" name="cityId" placeholder="请输入城市ID" autocomplete="off" class="layui-input">
                </div>
            </div>
        </div>

        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6 layui-hide">
            <div class="layui-form-item">
                <label class="layui-form-label">城市名</label>
                <div class="layui-input-block">
                    <input type="text" name="cityName" placeholder="请输入城市名" autocomplete="off" class="layui-input">
                </div>
            </div>
        </div>

        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6 layui-hide">
            <div class="layui-form-item">
                <label class="layui-form-label">县区ID</label>
                <div class="layui-input-block">
                    <input type="text" name="xianquId" placeholder="请输入县区ID" autocomplete="off" class="layui-input">
                </div>
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">学校名称</label>
            <div class="layui-input-block">
                <input type="text" name="schoolName" readonly placeholder="请输入学校名称" autocomplete="off" class="layui-input">
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">县区名</label>
            <div class="layui-input-block">
                <input type="text" readonly name="xianquName" id="xianquName" class="layui-input">
            </div>
        </div>


        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
            <div class="layui-form-item">
                <label class="layui-form-label">联系人</label>
                <div class="layui-input-block">
                    <input type="text" name="contactPerson"  placeholder="请输入联系人" autocomplete="off" class="layui-input">
                </div>
            </div>
        </div>

        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
            <div class="layui-form-item">
                <label class="layui-form-label">联系电话</label>
                <div class="layui-input-block">
                    <input type="text" name="contactPhoneNum" readonly placeholder="请输入联系电话" autocomplete="off" class="layui-input">
                </div>
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">学校地址</label>
            <div class="layui-input-block">
                <textarea name="schoolAddress" placeholder="请输入学校地址" class="layui-textarea"></textarea>
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">学校简介</label>
            <div class="layui-input-block">
                <textarea class="layui-textarea" name="schoolDesc" placeholder="请输入学校简介"></textarea>
            </div>
        </div>

        <input type="text" id="schoolLogoUrlInput" name="schoolLogoUrlInput"  class="layui-input layui-hide">
        <div class="layui-form-item">
            <div style="width: 40%;position: absolute">
                <label class="layui-form-label">原logo</label>
                <div class="layui-input-block">
                    <div class="file-iteme">
                        <img id="oldSchoolLogoUrl" src="" class="layui-upload-img" style="width: 90px;height: 90px">
                    </div>
                </div>
            </div>
            <div style="width: 50%;position: absolute;left: 42%">
                <label class="layui-form-label">新logo</label>
                <div class="layui-input-block">
                    <button  type="button" class="layui-btn" id="newSchoolLogoUrl">
                        <i class="layui-icon">&#xe67c;</i>上传学校logo
                    </button>
                    <input type="text" value="" style="display: none" id="imgAddressName"/>
                    <div class="layui-upload-list uploader-list" id="uploadImg"></div>
                </div>
            </div>
        </div>

        <input type="text" id="schoolImgInput" name="schoolImgInput"  class="layui-input layui-hide">
        <div class="layui-form-item" style="margin-top: 28%;">
            <div style="width: 40%;position: absolute">
                <label class="layui-form-label">原背景图</label>
                <div class="layui-input-block">
                    <div class="file-iteme">
                        <img id="oldSchoolAppLoginImg" src="" class="layui-upload-img" style="width: 90px;height: 90px">
                    </div>
                </div>
            </div>
            <div style="width: 50%;position: absolute;left: 42%">
                <label class="layui-form-label">新背景图</label>
                <div class="layui-input-block">
                    <button  type="button" class="layui-btn" id="newSchoolAppLoginImg">
                        <i class="layui-icon">&#xe67c;</i>上传学校背景图
                    </button>
                    <input type="text" value="" style="display: none" id="imgAppressName"/>
                    <div class="layui-upload-list uploader-list" id="uploadSchoolAppLoginImg"></div>
                </div>
            </div>
        </div>

        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6 layui-hide">
            <div class="layui-form-item">
                <label class="layui-form-label">学校logo审核状态(1:通过,0:审核中,-1:不通过)</label>
                <div class="layui-input-block">
                    <input type="text" name="schoolLogoShState" placeholder="请输入学校logo审核状态(1:通过,0:审核中,-1:不通过)" autocomplete="off" class="layui-input">
                </div>
            </div>
        </div>

        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6 layui-hide">
            <div class="layui-form-item">
                <label class="layui-form-label">关联系统用户ID</label>
                <div class="layui-input-block">
                    <input type="text" name="sysUserId" class="layui-input">
                </div>
            </div>
        </div>

    </div>
    <div class="layui-form-item layui-hide">
        <input type="button" lay-submit lay-filter="SocietySchool-form-edit" id="SocietySchool-form-edit" value="确认编辑">
    </div>
</div>

<script src="/layuiadmin/layui/layui.js"></script>
<script>
        layui.config({
            base: '/layuiadmin/' //静态资源所在路径
        }).extend({
            index: 'lib/index', //主入口模块
            $tool:'tool'
        }).use(['index', 'form','$tool','laydate','upload'], function(){

            var $ = layui.$
                ,$tool = layui.$tool
                ,laydate = layui.laydate
                ,admin = layui.admin
                ,upload = layui.upload
                ,form = layui.form;


            //初始化加载学校logo
            function initLogoImg(){
                var schoolLogoUrlInput = $("#schoolLogoUrlInput").val();
                $('#oldSchoolLogoUrl').attr('src',schoolLogoUrlInput);

                var schoolImgInput = $("#schoolImgInput").val();
                $('#oldSchoolAppLoginImg').attr('src',schoolImgInput);
            }
            initLogoImg();


            var uploadInst = upload.render({
                elem: '#newSchoolAppLoginImg' //绑定元素
                ,url: layui.setter.basePath +'/society/societySchool/uploadImg.jsn'
                ,accept: 'images'
                ,size:50000
                // ,bindAction:'#SocietySchool-form-submit'
                // ,auto:false
                ,before: function(obj){
                    obj.preview(function(index, file, result){
                        $('#uploadSchoolAppLoginImg').append('<div id="" class="file-iteme-Img">' +
                            '<div style="display: none" class="handle"><i class="layui-icon layui-icon-delete">删除</i></div>' +
                            '<img src="'+ result +'" alt="'+ file.name +'" class="layui-upload-img" style="width: 90px;height: 90px">'+
                            '</div>');
                        $('#newSchoolAppLoginImg').attr('style','display:none');
                    });
                }
                ,done: function(res){
                    if(res.code > 0){//上传失败
                        return layer.msg('上传失败');
                    }
                    //赋值图片路劲到隐藏标签上，方便用户提交获取
                    $("#imgAppressName").attr("value",res.data.data.src);
                }
                ,error: function(){
                    //演示失败状态，并实现重传

                }
            });

            //图片上方浮动删除
            $(document).on("mouseenter mouseleave", ".file-iteme-Img", function(event){
                if(event.type === "mouseenter"){
                    //鼠标悬浮
                    $(this).children(".info").fadeIn("fast");
                    $(this).children(".handle").fadeIn("fast");
                }else if(event.type === "mouseleave") {
                    //鼠标离开
                    $(this).children(".info").hide();
                    $(this).children(".handle").hide();
                }
            });
            //点击删除标识删除logo
            $(document).on("click", ".file-iteme-Img .handle", function(event){
                //前端预览图片删除
                $(this).parent().remove();
                $('#newSchoolAppLoginImg').attr('style','display:');
                debugger
                var imgAppressName =  $("#imgAppressName").val();
                //后台删除文件
                admin.req({
                    url:layui.setter.basePath +'/society/societySchool/deleteImgByAddress.jsn',
                    method:"post",
                    data:{
                        'imgAddressName' : imgAppressName
                    },
                    success:function (data) {

                    },
                });
            });


            var uploadInst = upload.render({
                elem: '#newSchoolLogoUrl' //绑定元素
                ,url: layui.setter.basePath +'/society/societySchool/uploadImg.jsn'
                ,accept: 'images'
                ,size:50000
                // ,bindAction:'#SocietySchool-form-submit'
                // ,auto:false
                ,before: function(obj){
                    obj.preview(function(index, file, result){
                        $('#uploadImg').append('<div id="" class="file-iteme">' +
                            '<div style="display: none" class="handle"><i class="layui-icon layui-icon-delete">删除</i></div>' +
                            '<img src="'+ result +'" alt="'+ file.name +'" class="layui-upload-img" style="width: 90px;height: 90px">'+
                            '</div>');
                        $('#newSchoolLogoUrl').attr('style','display:none');
                    });
                }
                ,done: function(res){
                    if(res.code > 0){//上传失败
                        return layer.msg('上传失败');
                    }
                    //赋值图片路劲到隐藏标签上，方便用户提交获取
                    $("#imgAddressName").attr("value",res.data.data.src);
                }
                ,error: function(){
                    //演示失败状态，并实现重传

                }
            });

            //图片上方浮动删除
            $(document).on("mouseenter mouseleave", ".file-iteme", function(event){
                if(event.type === "mouseenter"){
                    //鼠标悬浮
                    $(this).children(".info").fadeIn("fast");
                    $(this).children(".handle").fadeIn("fast");
                }else if(event.type === "mouseleave") {
                    //鼠标离开
                    $(this).children(".info").hide();
                    $(this).children(".handle").hide();
                }
            });
            //点击删除标识删除logo
            $(document).on("click", ".file-iteme .handle", function(event){
                //前端预览图片删除
                $(this).parent().remove();
                $('#newSchoolLogoUrl').attr('style','display:');
                debugger
                var imgAddressName =  $("#imgAddressName").val();
                //后台删除文件
                admin.req({
                    url:layui.setter.basePath +'/society/societySchool/deleteImgByAddress.jsn',
                    method:"post",
                    data:{
                        'imgAddressName' : imgAddressName
                    },
                    success:function (data) {

                    },
                });
            });


            form.on('submit(SocietySchool-form-edit)', function(data){
                var imgAddressName =  $("#imgAddressName").val();
                data.field['schoolLogoUrl'] = imgAddressName;
                var imgAppressName =  $("#imgAppressName").val();
                data.field['schoolAppLoginImg'] = imgAppressName;
                var field = data.field; //获取提交的字段
                var index = parent.layer.getFrameIndex(window.name);//先得到当前iframe层的索引
                admin.req({
                    url:layui.setter.basePath +'/society/societySchool/updateOldSchoolInfo.jsn',
                    data:field,
                    method:"post",
                    success:function (data) {
                        if(data.success){
                            parent.layui.table.reload('SocietySchool-list'); //重载表格
                            parent.layer.close(index); //再执行关闭
                            parent.layer.msg('修改成功', {
                                icon: 1
                            });
                        }else{
                            parent.layer.msg(data.errMsg, {
                            });
                        }
                    }
                });
            });


            laydate.render({
                elem: '#createTime', //指定元素
                type:'datetime'
            });
        })
</script>
</body>
</html>