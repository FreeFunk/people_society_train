<script src="/layuiadmin/layui/layui.js"></script>
<script>
        layui.config({
            base: '/layuiadmin/' //静态资源所在路径
        }).extend({
            index: 'lib/index', //主入口模块
            $tool:'tool'
        }).use(['index', 'form','$tool','laydate','upload'], function(){

            var $ = layui.$
                ,$tool = layui.$tool
                ,laydate = layui.laydate
                ,admin = layui.admin
                ,upload  = layui.upload
                ,form = layui.form;


            //证书上传
            var headers = layui.admin.getTokenHeader();
            var uploadInst = upload.render({
                elem: '#certImgUrlId'
                ,url: layui.setter.basePath +'/society/common/uploadTempFile.jsn' //改成您自己的上传接口
                ,headers:headers
                ,accept:'images'
                ,acceptMime:'image/*'
                ,size:5120 //设置文件最大可允许上传的大小，单位 KB
                ,before: function(obj){
                    //预读本地文件示例，不支持ie8
                    obj.preview(function(index, file, result){
                        $('#certImgUrlImgId').attr('src', result); //图片链接（base64）
                    });
                }
                ,done: function(res){
                    //如果上传失败
                    if(res.code > 0){
                        return layer.msg('上传失败');
                    }
                    //上传成功
                    $("#certImgUrl").val(res.data);
                }
            });


            /*var queryArgs = $tool.getQueryParam();//获取查询参数
            var id = queryArgs['id'];*/
            //监听修改保存
            form.on('submit(SocietySchoolTeacher-form-edit)', function(data){
                var field = data.field; //获取提交的字段
                var index = parent.layer.getFrameIndex(window.name);//先得到当前iframe层的索引
                admin.req({
                    url:layui.setter.basePath +'/society/societySchoolTeacher/saveOrUpdate.jsn',
                    data:field,
                    method:"post",
                    success:function (data) {
                        if(data.success){
                            parent.layui.table.reload('SocietySchoolTeacher-list'); //重载表格
                            parent.layer.close(index); //再执行关闭
                            parent.layer.msg('修改成功', {
                                icon: 1
                            });
                        }else{
                            parent.layer.msg(data.errMsg, {
                            });
                        }
                    }
                });
            });

            laydate.render({
                elem: '#createTime', //指定元素
                type:'datetime'
            });
        })
</script>
