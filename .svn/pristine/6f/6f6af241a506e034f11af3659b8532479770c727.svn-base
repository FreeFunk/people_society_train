<script src="/layuiadmin/layui/layui.js"></script>
<script>
    layui.config({
        base: '/layuiadmin/' //静态资源所在路径
    }).extend({
        index: 'lib/index' //主入口模块
    }).use(['index', 'form','laydate','upload','laytpl'], function(){
        var $ = layui.$
            ,laydate = layui.laydate
            ,admin  = layui.admin
            ,upload  = layui.upload
            ,laytpl = layui.laytpl
            ,form = layui.form;

        //查询该学校下面的讲师信息
        selectTeacherList();
        function selectTeacherList(){
            admin.req({
                url:layui.setter.basePath + "/society/societySchoolTeacher/listBySchoolIdAll.jsn",
                data:{},
                method:'post',
                success:function(data){
                    if(data.success){
                        var getTpl = document.getElementById("teacherNameList").innerHTML,
                            view = document.getElementById("teacherName");
                        laytpl(getTpl).render(data,function(html){
                            view.innerHTML = html;
                            form.render();
                        })
                    }
                }
            })
        }



        //上传课程封面
        var headers = layui.admin.getTokenHeader();
        var uploadInst = upload.render({
            elem: '#courseImageId'
            ,url: layui.setter.basePath +'/society/common/uploadTempFile.jsn' //改成您自己的上传接口
            ,headers:headers
            ,accept:'images'
            ,acceptMime:'image/*'
            ,size:5120 //设置文件最大可允许上传的大小，单位 KB
            ,before: function(obj){
                //预读本地文件示例，不支持ie8
                obj.preview(function(index, file, result){
                    $('#courseImageImgId').attr('src', result); //图片链接（base64）
                });
            }
            ,done: function(res){
                //如果上传失败
                if(res.code > 0){
                    return layer.msg('上传失败');
                }
                //上传成功
                $("#courseImage").val(res.data);
            }
            /*,error: function(){
                //演示失败状态，并实现重传
                var demoText = $('#demoText');
                demoText.html('<span style="color: #FF5722;">上传失败</span> <a class="layui-btn layui-btn-xs demo-reload">重试</a>');
                demoText.find('.demo-reload').on('click', function(){
                    uploadInst.upload();
                });
            }*/
        });

        //监听提交
        form.on('submit(SocietySchoolCourse-form-submit)', function(data){
            parent.layer.load(1, {shade: [0.1, '#393D49']});
            var field = data.field; //获取提交的字段
            var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
            //提交 Ajax 成功后，关闭当前弹层并重载表格
            admin.req({
                url:layui.setter.basePath +'/society/societySchoolCourse/multistageAdd.jsn',
                data:field,
                method:"post",
                success:function (data) {
                    if(data.success){
                        parent.layui.table.reload('SocietySchoolCourse-list'); //重载表格
                        parent.layer.closeAll(); //再执行关闭
                        parent.layer.msg('添加成功', {
                            icon: 1
                        });
                    }else{
                        parent.layer.msg(data.errMsg, {
                        });
                    }

                },
            });

        });
        laydate.render({
            elem: '#createTime', //指定元素
            type:'datetime'
        });
    })
</script>
